/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Inika:400,700');

/*song
 * Nib provides a CSS reset
 */
global-reset()

body
html
  color #fff
  height 100%
  font-family 'Inika', serif
a
  text-decoration none
  color dark
  &:hover
    color yellow
.lockup
  position relative
  padding 0px
  margin-top -5px
  &:hover
    .center
      opacity 1

.bigpicture
  width 100%
  margin 0 auto
  img
    width 100%

.center
  opacity 0
  text-align center
  position absolute
  width 100%
  top 50%
  transition all 2s ease-in-out
.headline
  font-size 2rem
  display block
.count
  display inline-block
  margin-top 10px
  .fa
    margin-right 3px
.caption
  font-size 10px
  color black