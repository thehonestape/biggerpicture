/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Inika:400,700');

/*song
 * Nib provides a CSS reset
 */
global-reset()

body
html
  color #fff
  height 100%
  font-family 'Inika', serif
a
  text-decoration none
  color white
  &:hover
    color white
.lockup
  position relative
  padding 0px
  margin-top -5px
  &:hover
    .center
      opacity 1

.bigpicture
  width 100%
  margin 0 auto
  img
    width 100%

.center
  opacity 0
  text-align center
  position absolute
  width 100%
  top 50%
  transition all 2s ease-in-out
.headline
  font-size 1.5rem
  position relative
  display inline-block
  hr
    color white
    box-shadow none
