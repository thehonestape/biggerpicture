/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Inika:400,700')
@import url('http://fonts.googleapis.com/css?family=Oswald:400,300,700')

/*song
 * Nib provides a CSS reset
 */
global-reset()

body
html
  color #fff
  height 100%
  font-family 'Inika', serif
a
  text-decoration none
  color white
  &:hover
    color white
.lockup
  position relative
  padding 0px
  margin-top -5px
  &:hover
    .headline
      h3
        transform translateY(0px)
        opacity 1
    .count
      transform translateY(0px)
      opacity 1
    hr
      opacity 1
.bigpicture
  width 100%
  margin 0 auto
  img
    width 100%

.center
  opacity 1
  text-align center
  position absolute
  width 100%
  top 50%
.headline
  font-size 1.5rem
  position relative
  display inline-block
  h3
    transform translateY(20px)
    opacity 0
    transition all 1s ease-in-out
  hr
    color white
    box-shadow none
    border 1px solid white
    opacity 0
    transition all .75s ease-in-out
