.count
  display block
  margin-top 10px
  position relative
  font-size 1rem
  transform translateY(-20px)
  opacity 0
  transition all 1s ease-in-out
  .fa
    margin-right 3px
.caption
  font-size 10px
  color black
.info-button
  position fixed
  left 0px
  top 0px
  color white
  z-index 10
  transition all .3s ease-in-out
  color black
  font-size 20px
  text-align center
  width 50px
  height 50px
  cursor pointer
  background black
  overflow hidden
  line-height 48px
  &:hover 
    background lighten(#000000,10%)
  &:after
    content 'i'
    color white
.info-button.active
  left 240px
  background tomato
  &:after
    color white
    content 'x'
  &:hover
    background darken(tomato,5%)
.cbp-spmenu
  background white
  position fixed
  color black
  .title
    height 50px
    line-height 50px
    background #f9ec21
  h3
    color black
    font-size 1.3rem
    margin 0
    font-weight 300
    text-align center
  h4
    padding 10px
    background black
    color white
  a
    color dodgerblue
    padding 0px
  a.large
    display block
    color #fff
    font-size 1.1em
    font-weight 300
    background dodgerblue
    &:hover
      background lighten(dodgerblue,10%)
    &:active
      background dodgerblue
  p
    padding 10px
    font-family 'Oswald', sans-serif
    font-weight 300
    font-size 1rem
    line-height 1.4rem

/* Orientation-dependent styles for the content of the menu */
 
.cbp-spmenu-vertical
  width 240px
  height 100%
  top 0
  z-index 1000
  a.large
    border-bottom 1px solid #258ecd
    padding 1em


/* Vertical menu that slides from the left or right */
 
.cbp-spmenu-left
  left -240px

.cbp-spmenu-left.cbp-spmenu-open
  left 0px


/* Push classes applied to the body */
 
.cbp-spmenu-push
  overflow-x hidden
  position relative
  left 0

.cbp-spmenu-push-toright
    left 240px

/* Transitions */
 
.cbp-spmenu,
.cbp-spmenu-push
  transition all 0.3s ease-in-out



